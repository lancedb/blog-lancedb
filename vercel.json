{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "hugo --gc -b https://$VERCEL_PROJECT_PRODUCTION_URL",
  "build": {
    "env": {
      "HUGO_VERSION": "0.147.7"
    }
  },
  "headers": [
    {
      "source": "/fonts/(.*).woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    { "source": "/rss", "destination": "/index.xml", "permanent": true },
    { "source": "/rss.xml", "destination": "/index.xml", "permanent": true },
    { "source": "/feed", "destination": "/index.xml", "permanent": true },
    { "source": "/blog/rss", "destination": "/blog/index.xml", "permanent": true },
    { "source": "/blog/rss.xml", "destination": "/blog/index.xml", "permanent": true }
  ]
}
